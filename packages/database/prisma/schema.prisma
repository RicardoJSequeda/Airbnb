generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  GUEST
  HOST
  ADMIN
  SUPER_ADMIN
}

enum SubscriptionPlan {
  FREE
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
}

enum BookingStatus {
  PENDING
  CONFIRMED
  REJECTED
  CANCELLED
  COMPLETED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

// ==================== MULTI-TENANT SCHEMA ====================
model Organization {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users              User[]
  subscriptions     Subscription[]
  properties        Property[]
  bookings          Booking[]
  payments          Payment[]
  experiences       Experience[]
  experienceBookings ExperienceBooking[]
  experiencePayments ExperiencePayment[]

  @@map("organizations")
}

model Subscription {
  id               String             @id @default(uuid())
  organizationId   String
  organization     Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  plan             SubscriptionPlan   @default(FREE)
  status           SubscriptionStatus @default(ACTIVE)
  stripeCustomerId String?
  currentPeriodEnd DateTime?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt

  @@index([organizationId])
  @@map("subscriptions")
}

// ==================== AUTH SCHEMA ====================
model User {
  id             String    @id @default(uuid())
  email          String    @unique
  password       String?   // Opcional para usuarios Supabase Auth
  name           String
  avatar         String?
  occupation     String?   // Tagline / profesión del host (ej: "Guías culturales en Gran Colombia Tours")
  bio            String?  // Biografía del host
  registrationNumber String? // RNT - Registro Nacional de Turismo (Colombia)
  role           UserRole  @default(GUEST)
  authProvider   String    @default("local") // "supabase" | "local"
  supabaseId     String?   @unique // auth.users.id cuando authProvider=supabase
  organizationId String?   // Nullable solo para SUPER_ADMIN
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  properties        Property[]         @relation("HostProperties")
  bookings          Booking[]          @relation("GuestBookings")
  reviews              Review[]              @relation("GuestReviews")
  favorites            Favorite[]
  experiences          Experience[]          @relation("HostExperiences")
  experienceBookings   ExperienceBooking[]   @relation("GuestExperienceBookings")
  experienceReviews    ExperienceReview[]    @relation("GuestExperienceReviews")

  @@index([supabaseId])
  @@index([organizationId])
  @@map("users")
}

// ==================== PROPERTY SCHEMA ====================
model Property {
  id             String   @id @default(uuid())
  title          String
  description    String
  price          Decimal  @db.Decimal(10, 2)
  currency       String   @default("USD")
  maxGuests      Int
  bedrooms       Int
  bathrooms      Int
  propertyType   String
  status         String   @default("DRAFT")

  address   String
  city      String
  state     String?
  country   String
  zipCode   String?
  latitude  Float
  longitude Float

  hostId         String
  host           User         @relation("HostProperties", fields: [hostId], references: [id], onDelete: Cascade)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  amenities      String
  images         String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings  Booking[]
  reviews   Review[]
  favorites Favorite[]

  @@index([hostId])
  @@index([organizationId])
  @@index([city, country])
  @@index([propertyType])
  @@map("properties")
}

// ==================== BOOKING SCHEMA ====================
model Booking {
  id             String        @id @default(uuid())
  propertyId     String
  property       Property      @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  guestId        String
  guest          User          @relation("GuestBookings", fields: [guestId], references: [id], onDelete: Cascade)
  organizationId String
  organization   Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  checkIn        DateTime
  checkOut       DateTime
  guests         Int
  totalPrice     Decimal       @db.Decimal(10, 2)
  status         BookingStatus @default(PENDING)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  payment Payment?
  review  Review?

  @@index([propertyId])
  @@index([guestId])
  @@index([organizationId])
  @@index([status])
  @@index([propertyId, checkIn, checkOut])
  @@index([checkIn, checkOut])
  @@map("bookings")
}

// ==================== PAYMENT SCHEMA ====================
model Payment {
  id                    String        @id @default(uuid())
  bookingId             String        @unique
  organizationId        String
  organization          Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  amount                Decimal       @db.Decimal(10, 2)
  currency              String        @default("usd")
  stripePaymentIntentId String?       @unique
  status                PaymentStatus @default(PENDING)
  paidAt                DateTime?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  platformFeeAmount Decimal? @db.Decimal(10, 2)
  hostNetAmount     Decimal? @db.Decimal(10, 2)

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([organizationId])
  @@map("payments")
}

// ==================== REVIEW SCHEMA ====================
model Review {
  id         String   @id @default(uuid())
  bookingId  String   @unique
  booking    Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  guestId    String
  guest      User     @relation("GuestReviews", fields: [guestId], references: [id], onDelete: Cascade)
  rating     Int
  comment    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([propertyId])
  @@index([guestId])
  @@map("reviews")
}

// ==================== LOCATIONS SCHEMA ====================
model Department {
  id           String   @id @default(uuid())
  name         String
  slug         String   @unique
  country      String   @default("CO")
  isActive     Boolean  @default(true)
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  cities City[]

  @@map("departments")
}

model City {
  id                    String   @id @default(uuid())
  name                  String
  slug                  String
  departmentId          String
  department            Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  suggestionDescription String?
  latitude              Float?
  longitude             Float?
  searchCount           Int      @default(0)
  displayOrder          Int      @default(0)
  isActive              Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  places            Place[]
  locationSearchLogs LocationSearchLog[]

  @@unique([slug, departmentId])
  @@index([departmentId])
  @@index([slug])
  @@map("cities")
}

// ==================== OUTBOX EVENTS ====================
model OutboxEvent {
  id          String   @id @default(uuid())
  aggregateId String
  type        String
  payload     Json
  createdAt   DateTime @default(now())
  processedAt DateTime?

  @@index([aggregateId])
  @@index([type])
  @@map("outbox_events")
}

model Place {
  id                    String   @id @default(uuid())
  name                  String
  type                  String
  cityId                String
  city                  City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  suggestionDescription String?
  displayOrder          Int      @default(0)
  isActive              Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([cityId])
  @@map("places")
}

model LocationSearchLog {
  id        String   @id @default(uuid())
  cityId    String
  city      City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([cityId])
  @@map("location_search_logs")
}

// ==================== EXPERIENCE SCHEMA ====================
model Experience {
  id             String   @id @default(uuid())
  title          String
  description    String
  pricePerParticipant Decimal @db.Decimal(10, 2)
  currency       String   @default("USD")
  maxParticipants Int
  duration       Int      // Duración en minutos
  category       String   // "tour", "workshop", "tasting", "adventure", etc.
  status         String   @default("DRAFT")

  address   String
  city      String
  state     String?
  country   String
  zipCode   String?
  latitude  Float
  longitude Float

  hostId         String
  host           User         @relation("HostExperiences", fields: [hostId], references: [id], onDelete: Cascade)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  includes       String   // JSON array: ["Guía local", "Entradas", "Transporte"]
  excludes       String?  // JSON array: ["Comida", "Propinas"]
  images         String   // JSON array de URLs
  meetingPoint   String?  // Punto de encuentro
  languages      String?  // JSON array: ["es", "en"]
  ageRestriction String?  // "18+", "All ages", etc.

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings      ExperienceBooking[]
  reviews       ExperienceReview[]
  availableSlots ExperienceSlot[]

  @@index([hostId])
  @@index([organizationId])
  @@index([city, country])
  @@index([category])
  @@index([status])
  @@map("experiences")
}

model ExperienceSlot {
  id           String   @id @default(uuid())
  experienceId String
  experience   Experience @relation(fields: [experienceId], references: [id], onDelete: Cascade)
  
  date         DateTime  // Fecha específica
  startTime    String    // Hora de inicio (ej: "09:00", "21:00")
  endTime      String?   // Hora de fin (opcional)
  availableSpots Int     // Espacios disponibles
  isRecurring  Boolean   @default(false) // Si se repite semanalmente
  dayOfWeek    Int?      // 0=Domingo, 1=Lunes... (solo si isRecurring)
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([experienceId])
  @@index([date])
  @@index([dayOfWeek])
  @@map("experience_slots")
}

model ExperienceBooking {
  id             String        @id @default(uuid())
  experienceId   String
  experience     Experience    @relation(fields: [experienceId], references: [id], onDelete: Cascade)
  guestId        String
  guest          User          @relation("GuestExperienceBookings", fields: [guestId], references: [id], onDelete: Cascade)
  organizationId String
  organization   Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  date           DateTime      // Fecha y hora de la experiencia
  participants   Int           // Número de participantes
  totalPrice     Decimal       @db.Decimal(10, 2)
  status         BookingStatus @default(PENDING)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payment ExperiencePayment?
  review  ExperienceReview?

  @@index([experienceId])
  @@index([guestId])
  @@index([organizationId])
  @@index([status])
  @@index([date])
  @@map("experience_bookings")
}

model ExperiencePayment {
  id                    String        @id @default(uuid())
  bookingId             String        @unique
  organizationId        String
  organization          Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  amount                Decimal       @db.Decimal(10, 2)
  currency              String        @default("usd")
  stripePaymentIntentId String?       @unique
  status                PaymentStatus @default(PENDING)
  paidAt                DateTime?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  platformFeeAmount Decimal? @db.Decimal(10, 2)
  hostNetAmount     Decimal? @db.Decimal(10, 2)

  booking ExperienceBooking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([organizationId])
  @@map("experience_payments")
}

model ExperienceReview {
  id           String   @id @default(uuid())
  bookingId    String   @unique
  booking      ExperienceBooking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  experienceId String
  experience   Experience @relation(fields: [experienceId], references: [id], onDelete: Cascade)
  guestId      String
  guest        User     @relation("GuestExperienceReviews", fields: [guestId], references: [id], onDelete: Cascade)
  rating       Int
  comment      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([experienceId])
  @@index([guestId])
  @@map("experience_reviews")
}

// ==================== FAVORITE SCHEMA ====================
model Favorite {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([userId, propertyId])
  @@index([userId])
  @@map("favorites")
}
